<%= render "shared/error", obj: @user %>

<h2>プロフィール編集</h2>
<div>
  <ul class="profile">
    <li><%= link_to"アカウント", "/users/account", class: "link_text" %></li>
    <li><%= link_to"プロフィール", "/users/profile", class: "link_text" %></li>
  </ul>
</div>

<%= form_with model: @user do |f| %>
  <table class="profile_detail">
    <tr>
      <th align="right"><%= f.label :user_image, "アイコン画像" %>:</th>
      <td><%= f.file_field :user_image, accept: 'image/*' %></td>
    </tr>
    <tr>
      <th align="right"><%= f.label :user_name, "名前" %>:</th>
      <td><%= f.text_field :user_name %></td>
    </tr>
    <tr>
      <th align="right"><%= f.label :introduction, "自己紹介" %>:</th>
      <td><%= f.text_area :introduction, size: "40x10" %></td>
    </tr>
  </table>
  
  <ul class="form_submit">
    <li><%= f.submit "保存", class: "form_button" %></li>
    <li><%= link_to "キャンセル", "/users/profile", class: "form_button" %></li>
  </ul>
<% end %>
