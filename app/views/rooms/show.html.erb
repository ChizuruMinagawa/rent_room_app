<header class="search">
  <%= search_form_for @q, url: rooms_path do |f| %>
    <%= f.label :address, "エリアを入力" %>
    <%= f.search_field :address_cont %>
    <%= f.label :room_detail, "キーワードを入力" %>
    <%= f.search_field :room_detail_cont %>
    <%= f.submit "検索" %>
  <% end %>
</header>

<div class="RoomContainer">  
  <div><%= link_to "戻る", :back %></div>
  <div>
    <% if @room.room_image? %>
      <img src='<%= @room.room_image %>' class="show_room_image">
    <% else %>
      <img src="/assets/default-room.png" class="show_room_image">
    <% end %>
  </div>
  <div class="room_group">
    <div><%= @room.room_name %></div>
    <div>¥<%= @room.price %></div>
    <div><%= @room.address %></div>
    <div><%= @room.room_detail %></div>

    <%= form_with model: @reservation, url: confirm_reservations_path(@reservation) do |f| %>
      <%= f.hidden_field :room_id, value:@room.id %>
      <div class="reservation_form_group">
        <div class="reservation_form">
          <div><%= f.label :start_date, "チェックイン" %></div>
          <div><%= f.date_field :start_date, required: true %></div>
        </div>

        <div class="reservation_form">
          <div><%= f.label :end_date, "チェックアウト" %></div>
          <div><%= f.date_field :end_date, required: true %></div>
        </div>

        <div class="reservation_form">
          <div><%= f.label :people, "人数" %></div>
          <div><%= f.text_field :people, required: true, in:1..50 %></div>
        </div>
        <div>
          <% if user_signed_in? %>
            <%= f.submit "確認画面へ" %>
          <% else %>
            <%= link_to"ログイン", "/users/sign_in" %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
