<h2>登録施設一覧</h2>

<table class="register_group"> 
  <thead class="headline">
    <tr>
      <th>画像</th>
      <th>施設名</th>
      <th>紹介文</th>
      <th>料金</th>
      <th>作成日</th>
    </tr>
  </thead>
  
  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td>
          <% if room.room_image? %>
            <img src='<%= room.room_image %>' class="own_room_image">
          <% else %>
            <img src="/assets/default-room.png" class="own_room_image">
          <% end %>
        </td>
        <td><%= link_to room.room_name, "/rooms/#{room.id}", class: "link_text" %></td>
        <td><%= room.room_detail.truncate(100) %></td>
        <td>¥<%= room.price %>〜</td>
        <td><%= room.updated_at.strftime("%Y/%m/%d %H:%M") %></td>
        <td><%= link_to "編集", "/rooms/#{room.id}/edit", class: "link_text" %><td>
      </tr>
    <% end %>
  </tbody>
</table>
